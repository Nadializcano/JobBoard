@using JobBoard.Models;

<h1>Job Openings</h1>
<ul>

@if (Model.Count == 0)
{
  <p>You have no jobs posted!</p>
}
@if(Model.Count != 0)
{

  @foreach (JobOpening opening in Model)
  {
    <li><a href='/openings/@opening.GetId()'>@opening.GetTitle() @opening.GetDescription() @opening.GetContact()</a></li>
  }
}

</ul>
<a href="/openings/new">Add a new job.</a>
